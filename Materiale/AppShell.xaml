<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Materiale.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Materiale"
    xmlns:view="clr-namespace:Materiale.View"
    Shell.TabBarBackgroundColor="YellowGreen"
    Shell.TabBarIsVisible="True">

    <TabBar>
        <ShellContent
        Title="Plan"
        Icon="edit.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        <ShellContent
        Title="Materiale"
        Icon="truck.png"
        ContentTemplate="{DataTemplate view:MaterialeView}"
        Route="MaterialeView" />
        
    </TabBar>

</Shell>
